.search {
  box-sizing: border-box;
  /* width:100%; */
  display: flex;
  align-items: center;
  height: 110rpx;
  padding: 20rpx 0 20rpx 30rpx;
  background: #f5f5f9;
}
.input-view {
  flex:1;
  display: flex;
  align-items: center;
  height: 100%;
  border-radius: 20rpx;
  background-color: #fff;
}
.icon {
  flex-basis: 18%;
  text-align: center;
}
.input {
  width: 100%;
  height: 100%;
}
.search-input-placeholder {
  font-size: 28rpx;
  color: #a0a0a0;
}
.btn {
  margin:0;
  background-color: transparent;
  font-size: 30rpx;
  font-weight: bold;
}
