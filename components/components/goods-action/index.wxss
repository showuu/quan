.goods-action {
  position: fixed;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  width: 100%;
  height: 120rpx;
  padding: 20rpx;
  display: flex;
  background-color: #fff;
}
.actions-view {
  flex-basis: 38%;
  display: flex;
}
.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}
.action-icon {
  width: 36rpx;
  margin-bottom: 10rpx;
}

.operation-view {
  flex-basis: 62%;
  display: flex;
  justify-content: center;
}
.cart-btn,
.buy-btn {
  width: 200rpx;
  height: 80rpx;
  padding: 0;
  border-radius: 0;
  line-height: 80rpx;
  font-size: 30rpx;
}
.cart-btn {
  margin-right: 0;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
  background: linear-gradient(to right, #f1d0a5, #d5ab79);
  color: #000;
}
.buy-btn {
  margin-left: 0;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  background: linear-gradient(to right, #363644, #2b2b39);
  color: #fff;
}
.button-hover {
  opacity: 0.8;
}
